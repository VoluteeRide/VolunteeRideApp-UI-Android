<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.volunteeride.volunteeride.RideDetailsActivity"
    tools:showIn="@layout/activity_ride_details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status: "
        android:id="@+id/lblStatus"
        android:textColor="#000000"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/textPckUpTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pick Up Time: "
        android:id="@+id/lblPckUpTime"
        android:textColor="#000000"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/lblRideDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pick Up Location: "
        android:id="@+id/lblPckUpLoc"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lblTotalNofOfRiders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textPckUpTime"
        android:layout_toRightOf="@+id/lblPckUpTime"
        android:layout_alignBottom="@+id/lblPckUpTime"
        android:layout_alignRight="@+id/textStatus"
        android:layout_alignEnd="@+id/textStatus"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textPckUpLoc"
        android:textColor="#5a2222"
        android:layout_alignTop="@+id/lblPckUpLoc"
        android:layout_toRightOf="@+id/lblPckUpLoc"
        android:layout_toEndOf="@+id/lblPckUpLoc"
        android:layout_above="@+id/textPckUpStreetAdd"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Ride"
        android:id="@+id/bttnAcptRide"
        android:visibility="visible"
        android:layout_alignTop="@+id/bttnAcknwldgeRide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acknowledge Ride"
        android:id="@+id/bttnAcknwldgeRide"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textPckUpStreetAdd"
        android:layout_alignRight="@+id/textPckUpLoc"
        android:layout_alignEnd="@+id/textPckUpLoc"
        android:layout_below="@+id/lblPckUpLoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Drop off Location: "
        android:id="@+id/lblDropOffLoc"
        android:textColor="#000000"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textPckUpStreetAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Ride"
        android:id="@+id/bttnCnclRide"
        android:layout_alignTop="@+id/bttnAcknwldgeRide"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ride Details"
        android:id="@+id/lblRideDetails"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textStatus"
        android:layout_alignTop="@+id/lblStatus"
        android:layout_toRightOf="@+id/lblStatus"
        android:layout_alignRight="@+id/textCenter"
        android:layout_alignEnd="@+id/textCenter"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total No Of Riders : "
        android:id="@+id/lblTotalNofOfRiders"
        android:textColor="#000000"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/lblCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textTotNoOfRiders"
        android:layout_alignBottom="@+id/lblTotalNofOfRiders"
        android:layout_toRightOf="@+id/lblTotalNofOfRiders"
        android:layout_alignRight="@+id/bttnAcknwldgeRide"
        android:layout_alignEnd="@+id/bttnAcknwldgeRide"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Center : "
        android:id="@+id/lblCenter"
        android:textColor="#000000"
        android:layout_below="@+id/lblPckUpTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/relativeLayout"
        android:visibility="visible"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Volunteer : "
            android:id="@+id/lblVolunteer"
            android:textColor="#000000"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textVolunteerName"
            android:layout_toRightOf="@+id/lblVolunteer"
            android:layout_alignRight="@+id/textVolunteerEmail"
            android:layout_alignEnd="@+id/textVolunteerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/lblVolunteerPhn"
            android:layout_below="@+id/textVolunteerName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Phone : "
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textVolunteerPhn"
            android:layout_below="@+id/textVolunteerName"
            android:layout_toRightOf="@+id/lblVolunteerPhn"
            android:layout_alignRight="@+id/textVolunteerEmail"
            android:layout_alignEnd="@+id/textVolunteerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textVolunteerEmail"
            android:layout_alignBaseline="@+id/lblVolunteerEmail"
            android:layout_alignBottom="@+id/lblVolunteerEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/lblVolunteerEmail"
            android:layout_toEndOf="@+id/lblVolunteerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/lblVolunteerEmail"
            android:text="Email : "
            android:textColor="#000000"
            android:layout_below="@+id/lblVolunteerPhn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textCenter"
        android:layout_alignBottom="@+id/lblCenter"
        android:layout_toRightOf="@+id/lblCenter"
        android:layout_alignRight="@+id/textPckUpLoc"
        android:layout_alignEnd="@+id/textPckUpLoc"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/textDropOffStreetAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ride Seeker : "
            android:id="@+id/lblRideSeeker"
            android:textColor="#000000"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textRideSeekerName"
            android:layout_toRightOf="@+id/lblRideSeeker"
            android:layout_alignRight="@+id/textRideSeekerEmail"
            android:layout_alignEnd="@+id/textRideSeekerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/lblRideSeekerPhn"
            android:layout_below="@+id/textRideSeekerName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Phone : "
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textRideSeekerEmail"
            android:layout_alignTop="@+id/lblRideSeekerEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/lblRideSeekerEmail"
            android:layout_alignBottom="@+id/lblRideSeekerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textRideSeekerPhn"
            android:layout_below="@+id/textRideSeekerName"
            android:layout_toRightOf="@+id/lblRideSeekerPhn"
            android:layout_alignRight="@+id/textRideSeekerEmail"
            android:layout_alignEnd="@+id/textRideSeekerEmail"
            android:textColor="#5a2222"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/lblRideSeekerEmail"
            android:text="Email : "
            android:textColor="#000000"
            android:layout_below="@+id/lblRideSeekerPhn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textDropOffStreetAdd"
        android:layout_below="@+id/lblDropOffLoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:textColor="#5a2222"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textDropOffLoc"
        android:layout_alignTop="@+id/lblDropOffLoc"
        android:layout_toRightOf="@+id/lblDropOffLoc"
        android:layout_alignRight="@+id/textDropOffStreetAdd"
        android:layout_alignEnd="@+id/textDropOffStreetAdd"
        android:textColor="#5a2222"
        android:textStyle="bold" />

</RelativeLayout>
